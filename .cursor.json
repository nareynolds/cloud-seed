{
  "ai": {
    "provider": "anthropic",
    "model": "claude-3-sonnet-20240229"
  },
  "editor": {
    "formatOnSave": true,
    "tabSize": 2,
    "insertSpaces": true,
    "wordWrap": "off",
    "rulers": [100]
  },
  "terminal": {
    "fontSize": 14,
    "fontFamily": "monospace"
  },
  "chat": {
    "saveHistory": true,
    "includeContextByDefault": true
  },
  "files": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/.nx/cache": true,
      "**/.pulumi": true
    }
  }
}
